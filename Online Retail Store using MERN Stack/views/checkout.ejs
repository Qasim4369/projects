<!DOCTYPE html>
<html>
<head>
  <title>Shopping Website</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>

<header>
  <nav>
    <div class="logo">Shopping Website</div>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/cart">Cart</a></li>
    </ul>
  </nav>
</header>

<main>
  <div class="container">
    <h2>Checkout</h2>
    <div class="cart-items">
      <% cartItems.forEach(function(item) { %>
        <div class="cart-item">
          <h3><%= item.name %></h3>
          <p class="item-price">$<%= item.price.toFixed(2) %></p>
        </div>
      <% }) %>
    </div>
    <form class="checkout-form" action="/checkout" method="POST">
      <button class="checkout-button" type="submit">Place Order</button>
    </form>
  </div>
</main>

<footer>
  &copy; 2023 Shopping Website. All rights reserved.
</footer>

</body>
</html>
